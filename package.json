{
  "name": "waiter-backend",
  "version": "1.0.0",
  "description": "Backend for Waiter Calling System",
  "main": "server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "start:network": "cross-env HOST=0.0.0.0 ts-node src/server.ts",
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "db:generate": "drizzle-kit genPerate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node src/database/seed.ts",
    "db:migrate": "ts-node src/database/run-migration.ts",
    "db:migrate-printer-language": "ts-node src/database/migrate-printer-language.ts",
    "db:verify-printer-language": "ts-node src/database/verify-printer-language-migration.ts",
    "db:seed-request-types": "ts-node src/database/seed-request-types.ts",
    "db:verify-migration": "ts-node src/database/verify-migration.ts",
    "db:verify-integrations": "ts-node src/database/verify-integrations.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@types/morgan": "^1.9.10",
    "@types/nodemailer": "^7.0.4",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "i": "^0.3.7",
    "iconv-lite": "^0.7.1",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "morgan": "^1.10.1",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.11",
    "npm": "^11.6.4",
    "pg": "^8.16.3",
    "puppeteer-core": "^24.33.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jszip": "^3.4.0",
    "@types/node": "^24.10.1",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.6",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^8.57.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
